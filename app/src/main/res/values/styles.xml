<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>

    <style name="WindowAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_up_slightly</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_down_slightly</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Mention">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Link">
        <item name="android:textColor">@color/hc_blue</item>
    </style>

</resources>
